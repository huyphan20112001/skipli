{
  "name": "be-challenge",
  "version": "1.0.0",
  "description": "Employee Task Management Backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:firebase": "jest firebase.test.ts",
    "clean": "rm -rf dist",
    "init-db": "ts-node src/scripts/init-database.ts",
    "db-stats": "ts-node -e \"import('./src/utils/database-init').then(m => new m.default().getDatabaseStats().then(console.log))\""
  },
  "keywords": [
    "express",
    "firebase",
    "socket.io",
    "employee-management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "socket.io": "^4.8.1",
    "twilio": "^5.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^7.0.1",
    "@types/sendgrid": "^2.0.31",
    "@types/supertest": "^6.0.3",
    "@types/twilio": "^3.19.2",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
